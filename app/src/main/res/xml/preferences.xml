<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <CheckBoxPreference
        android:defaultValue="false"
        android:key="remember"
        android:summary="Indique si la sauvegarde des identifiants est active par défaut"
        android:title="Sauver Préférences" />
    <EditTextPreference
        android:defaultValue="http://tomnab.fr/chat-api/"
        android:key="urlData"
        android:summary="Adresse de la page fournissant les données d'absence. Utiliser 10.0.2.2 pour désigner le serveur sur lequel tourne l'émulateur"
        android:title="URL du serveur" />
    <com.rarepebble.colorpicker.ColorPreference
        android:key="colorPreference"
        android:title="@string/pref_no_alpha"
        android:summary="@string/pref_no_alpha_summary"
        app:colorpicker_showAlpha="false"
        android:defaultValue="#00f"
        />
    <PreferenceCategory
        android:key="identifiants"
        android:summary="Saisie des identifiants utilisateur"
        android:title="Identifiants">
        <EditTextPreference
            android:defaultValue=""
            android:key="login"
            android:title="Login" />
        <EditTextPreference
            android:defaultValue=""
            android:key="passe"
            android:title="Passe" />
    </PreferenceCategory>

</PreferenceScreen>
